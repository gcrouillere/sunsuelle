<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:image="http://www.google.com/schemas/sitemap-image/1.1"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
  <% request.host.split('.').last == "com" ? root = "https://www.sunsuelle.com" : root = "https://www.sunsuelle.fr" %>
  <url>
    <loc><%="#{root}"%></loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  <url>
    <loc><%="#{root}"%>/sacs</loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <% @ceramiques.each do |ceramique| %>
    <url>
      <loc><%="#{root}"%>/sacs/<%= "#{ceramique.id}-#{ceramique.name.parameterize}-#{ceramique.categories.name.parameterize}" %></loc>
      <lastmod><%= ceramique.updated_at.strftime("%Y-%m-%d") %></lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>
  <url>
    <loc><%="#{root}"%>/articles</loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  <% @articles.each do |article| %>
    <url>
      <loc><%="#{root}"%>/articles/<%= "#{article.id}-#{article.title.parameterize}" %></loc>
      <lastmod><%= article.updated_at.strftime("%Y-%m-%d") %></lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>
  <url>
    <loc><%="#{root}"%>/info</loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  <url>
    <loc><%="#{root}"%>/about</loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.7</priority>
  </url>
  <url>
    <loc><%="#{root}"%>/contact</loc>
    <lastmod>2018-11-05</lastmod>
    <changefreq>yearly</changefreq>
    <priority>0.7</priority>
  </url>
</urlset>
